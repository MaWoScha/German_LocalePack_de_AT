<config>
    <modules>
        <German_LocalePackAt>
            <version>0.4.0</version>
            <locale>de_AT</locale>
            <title>German (Austria) Language Pack</title>
            <link_git>https://github.com/MaWoScha/German_LocalePack_de_AT</link_git>
            <link_mage></link_mage>
        </German_LocalePackAt>
    </modules>

    <global>
        <models>
            <localepackat>
                <class>German_LocalePackAt_Model</class>
            </localepackat>
        </models>
        <helpers>
            <localepackat>
                <class>German_LocalePackAt_Helper</class>
            </localepackat>
        </helpers>
        <blocks>
            <localepackat>
                <class>German_LocalePackAt_Block</class>
            </localepackat>
        </blocks>
        <events>
            <adminhtml_controller_action_predispatch_start>
                <observers>
                    <localepackat>
                        <class>localepackat/observer</class>
                        <method>adminhtmlControllerActionPredispatchStart</method>
                    </localepackat>
                </observers>
            </adminhtml_controller_action_predispatch_start>
        </events>
    </global>

    <default>
        <localepackat>
             <notification>
                <url>https://github.com/MaWoScha/German_LocalePack_de_AT</url>
            </notification>
        </localepackat>
        <magesetup>
            <default_country>AT</default_country>
        </magesetup>
    </default>

    <adminhtml>
        <layout>
            <updates>
                <localepackat>
                    <files>
                    	<default>localepackat.xml</default>
                    </files>
                </localepackat>
            </updates>
        </layout>
        <translate>
            <modules>
                <German_LocalePackAt>
                    <files>
                        <localepackat>German_LocaleAt.csv</localepackat>
                        <default>German_LocaleDe.csv</default>
                    </files>
                </German_LocalePackAt>
            </modules>
        </translate>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children> <!--
                                        <localepacks translate="title" module="localepackat">
                                            <title>Language Packs</title>
                                    		<children> -->
                                        		<localepackat translate="title" module="localepackat">
                                            		<title>German (Austria) Language Pack</title>
                                        		</localepackat> <!--
                                    		</children>
                                        </localepacks> -->
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

</config>